<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="cache-control" content="no-store" />
        <title>@ViewBag.Title</title>
        <link href="~/css/site.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/w3.css" rel="stylesheet">     
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/bootstrap.css"/>
        <link rel="stylesheet" href="~/css/bootstrap-dialog.min.css">
        
        @RenderSection("Style", required: false)
    </head>
    <body>
        <div id="logo">
            <img src="/images/logo.jpg" />
        </div>
        <nav class="navbar navbar-default mu-main-navbar" role="navigation">  
        <div class="container-menu">
            <div class="navbar-header">
            <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @RenderSection("Home", required: false)
            </div>
            
            <div id="navbar" class="navbar-collapse collapse">
            <ul id="top-menu" class="nav navbar-nav navbar-right mu-main-nav">    
                <li>@Html.ActionLink("AUDIOS", "Index", "Download")</li>                   
                <li>@Html.ActionLink("MAPA", "Index", "Map")</li>                   
                <li>@Html.ActionLink("BOSQUE VIRTUAL", "Index", "BosqueVirtual")</li>
                <li><a class="material-icons" style="font-size:30px">add_alert</a></li>
            </ul>                            
            </div>
        </div>
        </nav> 

        <div class="container body-content">
            @RenderBody()
        </div>
        <script src="~/js/jquery-3.3.1.min.js" type="text/javascript"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/bootstrap-dialog.min.js" type="text/javascript"></script>
        <script>
            $(document).ready(function() {
                var anio = (new Date()).getFullYear();
                $("#pie_pagina").html(anio.toString() + " - Bosque Protector");
            });
        </script>
        @RenderSection("Scripts", required: false) 
        
        @RenderSection("ScriptsIndex", required: false)
        <footer>
            <p id="pie_pagina" style="margin: 0"></p>
        </footer>
    </body>
</html>
@{
    Layout = "~/Pages/_Layout.cshtml";
}
@{
    ViewBag.Title = "Bosque";
}
@section Home{
  <a id="home-pag" href='@Url.Action("Index","")'><i class="fa fa-home w3-xxlarge navbar-text"></i></a>
}

<meta charset="utf-8">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Unity WebGL Player | Bosque Virtual</title>
<link rel="shortcut icon" href="js/TemplateData/favicon.ico">
<link rel="stylesheet" href="js/TemplateData/style.css">

@section ScriptsIndex {
	<script src="js/TemplateData/UnityProgress.js"></script>  
    	<script src="js/Build/UnityLoader.js"></script>
	<script>
    		var gameInstance = UnityLoader.instantiate("gameContainer", "js/Build/BosqueVirtual.json", {onProgress: UnityProgress});
    </script>
}

<audio hidden controls id="audio">
	<source id="source" src="" type="audio/ogg">
</audio>

<div class="container">	
    <div class="row"></div>
    <div class="col-md-12" style="border: 2em solid transparent;"></div>
    <div class="mu-about-us-area"></div> 
	<div class="webgl-content" style="width: 60%; height: 45%; position: absolute; top: 45%;">
		<div id="gameContainer"></div>
		<div class="footer">
			<div class="webgl-logo"></div>
			<div class="fullscreen" onclick="gameInstance.SetFullscreen(1)"></div>
			<div class="title">Bosque Virtual</div>
		</div>
	</div>
	<div class="row"></div>
</div>

@section Scripts {
	<script src="~/js/forestaudio.js"></script>
}



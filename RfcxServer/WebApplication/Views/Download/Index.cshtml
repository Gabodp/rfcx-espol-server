

@using Microsoft.Extensions.FileProviders
@model WebApplication.IndexModel

@{
    Layout = "~/Pages/_Layout.cshtml";
}

@{
    ViewBag.Title = "Downloader";
}
@section Home{
  <a id="home-pag" href='@Url.Action("Index","")'><i class="fa fa-home w3-xxlarge navbar-text"></i></a>
}
<!-- Favicon -->
<link rel="shortcut icon" href="assets/img/favicon.ico" type="image/x-icon">



<!-- Main style sheet -->
<link href="~/css/site.css" rel="stylesheet">    

<!-- Google Fonts -->

<!-- Prata for body  -->
<link href='https://fonts.googleapis.com/css?family=Prata' rel='stylesheet' type='text/css'>
<!-- Tangerine for small title -->
<link href='https://fonts.googleapis.com/css?family=Tangerine' rel='stylesheet' type='text/css'>   
<!-- Open Sans for title -->
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

<link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet'>

<!-- Start About us -->
<section id="mu-about-us">
  
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="mu-about-us-area">

        <div class="mu-title">
          <br />
          <h2>Descarga de audios</h2>
        </div>



          <div class="form-group">
            <table class="table table-bordered" id="vertical-table">
              
              <tr><th><label for="ddl"> Estación </label></th> 
                <td>   
                  <select id="select"></select>     
                </td>    
              </tr>

              <tr><th><label id="ReportBeginDate"> Fecha inicial </label></th>
                <td>  
                  <input type="date" class="form-control" id="start" name="start" value="" />
                </td>
              </tr>
          
              <tr><th><label id="ReportEndDate"> Fecha final</label></th>
                <td>  
                  <input type="date" class="form-control" id="end" name="end" value="" />
                </td>  
              </tr>  
          
            </table>

            <br />
            <button type="submit" class="out" onclick="buscarAudios()"> Buscar </button><br /><br /><br />
          </div>             
          <div class="table-responsive">
            <table class="table table-bordered" id="horizontal-table">
                <thead>
                  <!-- <th>#</th> -->
                  <th><input type="checkbox" id="selectAll"></th>
                  <th>Name File</th>
                  <th>Date Created</th>
                  <th>Play</th>
                  <th>Label &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; <i class="glyphicon glyphicon-search"></i></th>
                </thead>
                <tbody id="myTable-page">
                @foreach (IFileInfo item in Model.Files)
                  {
                    <tr>
                              <td>
                                  <input type="checkbox" class="check" value=""/>
                              </td>
                              <td> @item.Name </td>
                              <td></td>
                              <td>
                                <audio controls>
                                  <source src="/files/@Model.selected/audios/@item.Name" type="audio/x-m4a">
                                </audio>  
                              </td>
                              <td></td>
                          
                    </tr>
                  }
                </tbody>
              </table>
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
            <br />
            <button id="dl" type="submit" class="out">Download</button><br /><br /><br /> 
          </div>        
      </div>
    </div>      
  </div>
</div>
</section>
@section Scripts {
  <script src="~/js/download.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

  <script src="~/js/paged.js"></script>

}



@using Microsoft.Extensions.FileProviders
@model WebApplication.IndexModel

@{
    Layout = "~/Pages/_Layout.cshtml";
}

@{
    ViewBag.Title = "Download";
}

<!-- Favicon -->
<link rel="shortcut icon" href="assets/img/favicon.ico" type="image/x-icon">

<link href="lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"> 



<!-- Main style sheet -->
<link href="~/css/site.css" rel="stylesheet">    

<!-- Google Fonts -->

<!-- Prata for body  -->
<link href='https://fonts.googleapis.com/css?family=Prata' rel='stylesheet' type='text/css'>
<!-- Tangerine for small title -->
<link href='https://fonts.googleapis.com/css?family=Tangerine' rel='stylesheet' type='text/css'>   
<!-- Open Sans for title -->
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet'>


<!-- Start About us -->
<section id="mu-about-us">
  
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="mu-about-us-area">

        <div class="mu-title">
          <br />
          <h2>Sound Files Downloader</h2>
        </div>


        <form method="post" enctype="#mu-about-ustipart/form-data" action="/Download">
          <div class="form-group">
            <table class="table table-bordered" id="vertical-table">
              
              <tr><th><label for="ddl">Device </label></th> 
                <td>    
                @Html.DropDownList("ddl", Model.deviceFolders.Select(item => new SelectListItem
                {
                    Value = item.ToString(),
                    Text = item.ToString(),
                    Selected = item == Model.selected

                }))
                </td>    
              </tr>

              <tr><th><label id="ReportBeginDate">Report Begin Date </label></th>
                <td>  
                  <input type="date" name="start" value="@if (Model.start != null) {@Model.start_d.ToString("yyyy-MM-dd"); }else{@DateTime.Today.ToString("yyyy-MM-dd");}" />
                </td>
              </tr>
          
              <tr><th><label id="ReportEndDate">Report End Date</label></th>
                <td>  
                  <input type="date" name="end" value="@if (Model.end != null) {@Model.end_d.ToString("yyyy-MM-dd"); }else{@DateTime.Today.ToString("yyyy-MM-dd");}" />
                </td>  
              </tr>  
          
            </table>

            <br />
            <button type="submit" class="out">Search</button><br /><br /><br />
          </div> 
        </form>
             

        
          <div class="table-responsive">
            <table class="table table-bordered" id="horizontal-table">
                <thead>
                  <!-- <th>#</th> -->
                  <th><input type="checkbox" id="selectAll"></th>
                  <th>Name File</th>
                  <th>Date Created</th>
                  <th>Play</th>
                  <th>Label &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; <i class="glyphicon glyphicon-search"></i></th>
                </thead>

                <form method="POST" id="form2" enctype="multipart/form-data" action="/Download/DownloadFiles">
                @foreach (var item in Model.filesSorted)
                {
                  <tr>
                    @if (Model.start != null && Model.end != null)
                    {
                        @if (Model.start_d.CompareTo(item.LastModified.AddHours(-5).Date) <= 0 && Model.end_d.CompareTo(item.LastModified.AddHours(-5).Date) >= 0 && 
                            ((item.Name.ToString().Substring(item.Name.ToString().IndexOf('.'), 4) == ".m4a") || (item.Name.ToString().Substring(item.Name.ToString().IndexOf('.'), 4) == ".3gp")) && item.Name.ToString().Length == 17)
                        {
                            <td>
                                <input type="checkbox" class="check" value="@item.Name">
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.LastModified.AddHours(-5).ToString("dd/MMM/yyyy")
                            </td>
                            <td>
                                <audio controls>
                                <source src=((DownloadController)this.ViewContext.Controller).getFile(@Model.selected,@item.Name) type="audio/m4a">
                                
                                /*@Html.ActionLink(@item.Name, "DownloadUniqueFile", "Download", new { namefile = @item.Name, device = @Model.selected },null)
                                */</audio>
                            </td>

                          }
                        }
                  </tr>
                }
                
              </table>

            <input type="hidden" name="start" value="@if (Model.start != null) {@Model.start_d.ToString("yyyy-MM-dd"); }" />
            <input type="hidden" name="end" value="@if (Model.end != null) {@Model.end_d.ToString("yyyy-MM-dd"); }" />
            <input id="ddt" name="device" type="hidden" value="@Model.selected" />
            <input type="hidden" id="lista" name="lista" value="" />
            <br />
            <button id="dl" type="button" class="out">Download</button><br /><br /><br /> 
          </div>        
        </form>                                        
      </div>
    </div>      
  </div>
</div>
</section>
@section Scripts {
   <script type="text/javascript">
      $(document).ready(function(){
        $("#selectAll").change(function(){
    	    var cbs = $("input.check");
    	    if($("#selectAll").is(":checked")){
        	  cbs.each(function(){
              $(this).prop("checked", true);
            });
          } else {
        	  cbs.each(function(){
              $(this).prop("checked", false);
            });
          }
        });

        $("#dl").click(function(){
    	    var cbs = $("input.check");
          var lista_check = "";
          cbs.each(function(){
            if($(this).is(":checked")){
              lista_check = lista_check + $(this).val() + ",";
            }
          });
          lista_check = lista_check.substring(0, lista_check.length - 1);
          $("#lista").attr("value", lista_check);
          if(lista_check.length != 0){
            $("#form2").submit();        
          } else {
            alert("No ha seleccionado ningún archivo");
          }
        });
        
      });
    </script> 
}
@using Microsoft.Extensions.FileProviders
@model WebApplication.IndexModel

@{
    Layout = "~/Pages/_Layout.cshtml";
}
@{
    ViewBag.Title = "StationRegister";
}
@section Home{
  <a id="home-pag" href='@Url.Action("Index","")'><i class="fa fa-home w3-xxlarge navbar-text"></i></a>
}

<link rel="shortcut icon" href="assets/img/favicon.ico" type="image/x-icon">
<!-- <link href="assets/css/font-awesome.css" rel="stylesheet"> -->
<link href="lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"> 
<!-- <link rel="stylesheet" type="text/css" href="wwwroot/lib/bootstrap/slick.css"> -->   
<link href="~/css/site.css" rel="stylesheet">    
<link href='https://fonts.googleapis.com/css?family=Prata' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Tangerine' rel='stylesheet' type='text/css'>   
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel='stylesheet' type='text/css' href='~/css/stations.css'>

<div class="row equal">
 	<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 plus-station" style="margin-bottom: 15px">
		<div class="new_station_button">
			<a data-toggle="modal" href="#station_modal" class="material-icons" id="plus-icon">
				add_circle_outline
			</a>
		</div>
	</div>
</div>

<!-- Modal form-->
<div class="modal fade" id="station_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" style="margin-top: 2px" onclick="closeModal(1)">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="modal_label">Nueva Estación</h4>
			</div>
			<div class="modal-body">
				<div class="row">
				<form>
					<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
						<label>Nombre:</label>
						<input id="name" class="form-control" type="text"/>
					</div>
					<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
						<label>API Key:</label>
						<input id="api_key" class="form-control" type="text"/>
					</div>
					<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
						<label>Latitud:</label>
						<input id="latitude" class="form-control" type="text"/>
					</div>
					<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
						<label>Longitud:</label>
						<input id="longitude" class="form-control" type="text"/>
					</div>
					<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
						<label>Versión de Android:</label>
						<input id="android_version" class="form-control" type="text"/>
					</div>
					<div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
						<label>Versión de Servicios:</label>
						<input id="services_version" class="form-control" type="text"/>
					</div>
					<input id="db_id" type="hidden"/>
				</form>
				</div>
			</div>
			<div class="modal-footer">
				<input id="save" type="button" class="out" value="Guardar" />
				<input id="cancel" type="button" class="out" value="Cancelar" onclick="closeModal(1)" />
			</div>
		</div>
	</div>
</div>

<!-- Modal alert-->
<div class="modal fade" id="alert_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header alert-danger">
				<button type="button" class="close" style="margin-top: 1px" onclick="closeModal(2)">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="modal_alert_label">ADVERTENCIA</h4>
			</div>
			<div class="modal-body">
				<p>Se borrará la estación y todos sus sensores, así como todos los datos relacionados a ellos.
					Esta acción no puede revertirse. ¿Desea continuar?
				</p>
				<input id="st_id" type="hidden"/>
			</div>
			<div class="modal-footer">
				<button id="accept" class="btn btn-danger" onclick="deleteStation()">Aceptar</button>
				<button id="cancel" class="btn btn-default" onclick="closeModal(2)">Cancelar</button>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/stations.js"></script>
}
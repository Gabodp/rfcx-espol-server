@using Microsoft.Extensions.FileProviders
@model WebApplication.IndexModel

@{
    Layout = "~/Pages/_Layout.cshtml";
}
@{
    ViewBag.Title = "StationRegister";
}
@section Home{
  <a id="home-pag" href='@Url.Action("Index","")'><i class="fa fa-home w3-xxlarge navbar-text"></i></a>
}

<link rel="shortcut icon" href="assets/img/favicon.ico" type="image/x-icon">
<!-- <link href="assets/css/font-awesome.css" rel="stylesheet"> -->
<link href="lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"> 
<!-- <link rel="stylesheet" type="text/css" href="wwwroot/lib/bootstrap/slick.css"> -->   
<link href="~/css/site.css" rel="stylesheet">    
<link href='https://fonts.googleapis.com/css?family=Prata' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Tangerine' rel='stylesheet' type='text/css'>   
<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel='stylesheet' type='text/css' href='~/css/stations.css'>

<div class="row equal">
 	<div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 plus-station">
		<div class="cuerpo-nuevo">
			<a data-toggle="modal" href="#myModal" class="material-icons" id="plus-icon">
				add_circle_outline
			</a>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Registro de Estación</h4>
      </div>
      
      <div class="modal-body">
        <form method="post" enctype="#mu-about-ustipart/form-data" action="">
          <div class="form-group">
            <table class="table">
              
              <tr><th><label for="ddl">Nombre: </label></th> 
                <td> <input></input> </td>
              </tr>
          
              <tr><th><label>Latitud: </label></th>
                <td> <input></input> </td>
              </tr>

	      <tr><th><label>Longitud: </label></th>
                <td> <input></input> </td>
              </tr>	      
          
              <tr><th><label>Versión de Android: </label></th>
                <td> <input></input> </td>
              </tr>
	      
              <tr><th><label>Versión de Servicios: </label></th>
                <td> <input></input> </td>
              </tr>	      

              <tr><th><label>Versión de Servicios: </label></th>
                <td> <input></input> </td>
              </tr>  

            </table>

        
            <br />
            <!-- <button type="submit" class="out">Registro de dispositivo </button><br /> -->
          </div>        
        </form>         
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2" id="out">Registrar sensor</button><br />
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Registro de Sensor</h4>
      </div>
      <div class="modal-body" class="container1">

        <button class="material-icons" class ="plus-icon" id="masfilas" class="add_form_field">add_circle_outline</button>
        
        <table id="myt" class="table-responsive">
          <tr>
            <th>Tipo &nbsp;&nbsp;</th>
            <th>Ubicación </th>
          </tr>
        </table>

      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="out">Guardar</button><br />
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
	<script src="~/js/stations.js"></script>
}
